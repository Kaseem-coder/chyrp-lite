{% extends "layouts" ~ DIR ~ "default.twig" %}

{% block title %}{{ "Import" | translate }}{% endblock %}

{% block content %}
<h2>WordPress</h2>
<form id="import_wordpress_form" class="split" action="{{ url('import_wordpress') }}" method="post" accept-charset="UTF-8" enctype="multipart/form-data">
<fieldset>
<p>
<label for="xml_file">{{ "eXtended .XML File" | translate("migrator") }}</label>
<input type="file" name="xml_file" value="" id="xml_file" accept=".xml" required>
</p>
<p>
<label for="media_url">{{ "URL for Embedded Media" | translate("migrator") }}
<span class="sub">{{ "(optional)" | translate }}</span>
</label>
<input class="text" type="url" name="media_url" value="" id="wordpress_media_url">
<small>
{{ "Usually something like <code>%s/wp-content/uploads/</code>." | translate("migrator") | format(site.url) }}
</small>
</p>
<p class="buttons">
<button type="submit" class="yay"><img src="{{ site.chyrp_url }}/admin/images/icons/success.svg" alt="icon">{{ "Import" | translate }}</button>
</p>
<input type="hidden" name="hash" value="{{ authenticate() }}" id="wordpress_hash">
</fieldset>
</form>
<hr>
<h2>Tumblr</h2>
<form id="import_tumblr_form" class="split" action="{{ url('import_tumblr') }}" method="post" accept-charset="UTF-8">
<fieldset>
