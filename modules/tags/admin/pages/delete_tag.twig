{% extends "layouts" ~ DIR ~ "default.twig" %}

{% block title %}{{ "Delete Tag?" | translate("tags") }}{% endblock %}

{% block content %}
<h2>{{ "Delete Tag?" | translate("tags") }}</h2>
<p>
{{ "&#8220;%s&#8221; will be permanently deleted." | translate("tags") | format(tag.name) }}
</p>
<form class="delete" action="{{ url('destroy_tag') }}" method="post" accept-charset="UTF-8">
<fieldset role="presentation">
<div class="confirmation">
<button name="destroy" value="indubitably" class="boo">
{{ icon_img("destroy.svg") }}{{ "Delete!" | translate }}
</button>
<button name="destroy" value="undecidedly" type="submit" class="yay">
{{ icon_img("cancel.svg") }}{{ "Cancel" | translate }}
</button>
</div>
<input type="hidden" name="name" value="{{ tag.name | fix(true) }}" id="name">
<input type="hidden" name="hash" value="{{ authenticate() }}" id="hash">
</fieldset>
</form>
{% endblock %}
