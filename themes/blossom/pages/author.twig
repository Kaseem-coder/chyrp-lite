{% extends "layouts" ~ DIR ~ "default.twig" %}

{% block content %}
{% if posts.paginated is not empty %}
<div class="ribbon">
<h3 class="ribbon">{{ "Posts created by &#8220;%s&#8221;" | translate | format(author.name | fix) }}</h3>
</div>
{% endif %}
{% for post in posts.paginated %}
{% include(["feathers" ~ DIR ~ post.feather ~ ".twig", "feathers" ~ DIR ~ "missing.twig"]) %}
{% else %}
<div class="ribbon">
<h3 role="status" class="ribbon">{{ "This user hasn't created any posts." | translate }}</h3>
</div>
{% endfor %}
{% endblock %}
